</head>
   
<body>
    <!--**************************-->
    <div class="container">    
        <!--~~~~~~~~~~~~~~~~~-->
        <div class="header">           
        </div>        
        
        
    </div>
    <!--**************************-->    
    <!--~~~~~~~~~~~~~~~~~--> 
        <!--chavel-->
        <div class="container mt-3">
        
            <div class="alert alert-warning" role="alert" style="margin-bottom: 2rem">
                    <h1 class="alert-heading text-center" ><strong>我的收藏</strong></h1>
                    <p Align="Center">可以將心動的景點加入到這次旅遊中喲!</p>
                    
            </div>

        <div class="row">
 

             <!-- 卡片一 -->
             <div class="col-12">
                <% for(var i=0; i<items.length; i++) {%>

               

                <div class="card border-warning mb-3 bg-transparent border-warning text-center " style="margin-bottom: 1.6rem;">
                    <div class="card-header bg-transparent border-warning"  style="font-size: 1.7rem">
                        <strong>收藏<%=[i+1]%></strong>
                        <a class="btn btn-danger float-right" type="button" href="/collection/collect/delete/<%= items[i].place_id %>">X</a>
                    </div>
    
                    <div class="card-body" >
                            <div class="card-title" style="font-size: 1rem"><strong><%= items[i].place_name %></strong></div>       
                    </div>

                    <a class="btn btn-warning" type="button" href="http://node-express-browser.herokuapp.com/select?group_id=<%= items[i].group_id %>&place_id=<%= items[i].place_id%>" method = "get">加入行程</a>
                    
                </div>

                <% } %>
            </div>

        </div>

        </div>

    </div>
        <!--chavel-->
     
