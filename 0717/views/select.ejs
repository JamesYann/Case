<body>
    <div class="container mt-3" >

        <div class="alert alert-success" role="alert" style="margin-bottom: 3rem">

             <form action = "/collection/add" method = "post">

                <div class="form">
<!--******************************************************-->
                   <p>請選擇要加入的行程</p>
                    <div class="collection">
                            <% for(var i=0; i<items.length; i++) {%>
                              <input type="radio" name="scheduleid" value="<%= items[i].schedule_id %>" > <%= items[i].schedule_name %><br>
                            <% } %>          
                    </div>
                    <br>
                    <button type="submit" id="btnSubmit"> 確定</button>
<!--******************************************************-->



