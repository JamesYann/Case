     <!--radio btn select -->

    <script type="text/javascript" language="javascript">
     /*------判断radio是否有选中，获取选中的值--------*/
        $(function(){
             $("#btnSubmit").click(function(){
                var val=$('input:radio[name="scheduleid"]:checked').val();
                if(val==null){
                    alert("請選擇一項計畫表!");
                    return false;
                }
                else{
                    alert(val);
                }
             });
         });
    </script>
 <!--radio btn select-->

